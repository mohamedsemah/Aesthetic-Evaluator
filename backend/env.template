# Environment Variables Template
# Copy this to .env and fill in your values
# NEVER commit .env to git!

# Security - REQUIRED: Generate a secure random key (min 32 characters)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_SECRET_KEY_MIN_32_CHARS

# CORS - REQUIRED: Set to your frontend domain(s), comma-separated
ALLOWED_ORIGINS=https://your-frontend-app.vercel.app,https://www.your-frontend-app.vercel.app

# Authentication - Set to True for production with API keys
AUTH_REQUIRED=False

# API Key for simple authentication (if AUTH_REQUIRED=True)
API_KEY=

# Database - Use PostgreSQL for production (Railway provides this)
# For SQLite (development): sqlite:///./aesthetics_analyzer.db
# For PostgreSQL (production): postgresql://user:pass@host:port/dbname
# Railway sets this automatically when you add PostgreSQL database
DATABASE_URL=sqlite:///./aesthetics_analyzer.db

# LLM API Keys - At least one required for the application to work
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
REPLICATE_API_TOKEN=

# Error Tracking (Optional but recommended)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Redis (Optional - for caching and background jobs)
REDIS_URL=
CACHE_ENABLED=True
CELERY_ENABLED=False

# Application Settings
DEBUG=False
LOG_LEVEL=INFO
SESSION_EXPIRY_HOURS=24

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_TOTAL_SIZE=524288000
MAX_FILES_PER_SESSION=100

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Workers (for production scaling - Railway will use this)
WORKERS=2

